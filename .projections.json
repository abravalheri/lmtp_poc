{
  "src/*.erl" : {
    "alternate": "test/{basename}_test.erl",
    "type": "source",
    "template": [
      "%%%-------------------------------------------------------------------",
      "%% @doc Module doc here",
      "%% @end",
      "%%%-------------------------------------------------------------------\n",
      "-module({basename}).\n",
      "%-------------------------------------------------------------------",
      "% Public API", 
      "%-------------------------------------------------------------------\n",
      "%-------------------------------------------------------------------",
      "% Callback Implementation",
      "%-------------------------------------------------------------------\n",
      "%-------------------------------------------------------------------",
      "% Internal Functions", 
      "%-------------------------------------------------------------------\n"
    ]
  },
  "test/*_test.erl" : {
    "alternate": "src/{basename}.erl",
    "type": "test",
    "template": [
      "-module({basename}_test).\n",
      "-compile([export_all, nowarn_export_all]).\n",
      "-include_lib(\"eunit/include/eunit.hrl\").\n"
    ]
  }
}
